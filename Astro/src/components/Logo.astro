---
import { SITE } from 'astrowind:config';
// Import the image with metadata
import logoImage from '~/assets/images/Logo.png';
---

<span
  class="self-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-gray-900 whitespace-nowrap dark:text-white flex items-center"
>
  <!-- Add an image before the site name -->
  <img 
    src={logoImage.src}
    alt="{SITE?.name} Logo" 
    class="w-8 h-8 mr-2 inline-block"
  />
  {SITE?.name}
</span>